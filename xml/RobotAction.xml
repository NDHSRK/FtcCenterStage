<RobotAction>

    <!-- For testing with a drive train. -->
    <!-- On the Driver Station select the autonomous OpMode
         Test, TestRED (to run the TEST OpMode under the red alliance),
         or TestBLUE (to run the TEST OpMode under the blue alliance -->
    <OpMode id="TEST">
        <parameters>
            <log_level>v</log_level>
        </parameters>
        <actions>

            <FORWARD>
                <distance>27.0</distance>
                <velocity>.5</velocity>
                <ramp_down_at_distance_remaining>8</ramp_down_at_distance_remaining>
            </FORWARD>

            <TURN>
                <angle>45.0</angle>
                <power>.5</power>
                <ramp_down_at_angle_remaining>10.0</ramp_down_at_angle_remaining>
            </TURN>

            <SLEEP>
                <ms>1000</ms>
            </SLEEP>
            
            <TURN>
                <angle>-45.0</angle>
                <power>.5</power>
                <ramp_down_at_angle_remaining>10.0</ramp_down_at_angle_remaining>
            </TURN>

            <DESKEW />           

            <SLEEP>
                <ms>1000</ms>
            </SLEEP>

            <BACK>
                <distance>20</distance>
                <velocity>.5</velocity>
                <ramp_down_at_distance_remaining>5.0</ramp_down_at_distance_remaining>
            </BACK>

            <!-- Test strafe by angle -->
            <!-- STRAIGHT_BY>
                <distance>30.0</distance>
                <velocity>0.5</velocity>
                <angle>-20.0</angle>
                <ramp_down_at_distance_remaining>10</ramp_down_at_distance_remaining>
            </STRAIGHT_BY -->

            <SLEEP>
                <ms>1500</ms>
            </SLEEP>

            <STOP />

        </actions>
    </OpMode>

    <!-- Pseudo-OpModes that can be used to run FTCAuto functions from within TeleOp -->
    <OpMode id="TELEOP_TAKE_PICTURE_WEBCAM">
        <parameters>
            <log_level>d</log_level>
        </parameters>

        <actions>

            <TAKE_PICTURE_WEBCAM />
           
            <SLEEP>
                <ms>1500</ms>
            </SLEEP>
            
        </actions>

    </OpMode>

</RobotAction>