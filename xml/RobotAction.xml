<RobotAction>

    <!-- For testing with a drive train. -->
    <!-- On the Driver Station select the autonomous OpMode
         Test, TestRED (to run the TEST OpMode under the red alliance),
         or TestBLUE (to run the TEST OpMode under the blue alliance -->
    <OpMode id="TEST">
        <parameters>
            <log_level>v</log_level>
        </parameters>
        <actions>

            <!-- Test strafe by angle -->
            <!-- STRAIGHT_BY>
                <distance>30.0</distance>
                <velocity>0.5</velocity>
                <angle>-20.0</angle>
                <ramp_down_at_distance_remaining>10</ramp_down_at_distance_remaining>
            </STRAIGHT_BY -->

            <!-- If the front webcam is in the configuration it is always started
                 and enabled. If the rear webcam is in the configuration it is
                 started but not enabled. -->
            <!-- **TODO So here try both cameras in the configuration but immediately
                 disable and stop streaming the front camera. Then see if this OpMode
                 recognizes the AprilTag and runs to completion without crashing the
                 RC at the end of the run. 10/17/23 NO CRASH -->
            <!-- **TODO If this works then try stopping streaming on the *rear* camera
                 before taking a picture with the front webcam. Then disable its
                 processor and stop streaming before *resuming* streaming and enabling
                 the AprilTag processor on the rear camera. If this
                 does *not* work then do *not* even start the rear camera until we
                 have stopped streaming the front camera. This way the two cameras
                 will never be in a streaming state at the same time. 10/17/23 this
                 DID CRASH at the very end - but produced log files. -->

                 <STOP_WEBCAM_STREAMING>
                    <internal_webcam_id>rear_webcam</internal_webcam_id>
                </STOP_WEBCAM_STREAMING>

                <SLEEP>
                    <ms>1000</ms>
                </SLEEP>

                 <FIND_TEAM_PROP>
                    <image_parameters>
                        <image_source>front_webcam</image_source>
                        <resolution>
                            <width>640</width>
                            <height>480</height>
                        </resolution>
                        <image_roi>
                            <x>50</x>
                            <y>270</y>
                            <width>530</width>
                            <height>145</height>
                        </image_roi>
                    </image_parameters>
                    <team_prop_recognition>
                        <recognition_path>color_channel_bright_spot</recognition_path>
                        <!-- These values are relative to the image ROI -->
                        <!-- Note: the left_window may enclose the LEFT_SPIKE
                                                     or the CENTER_SPIKE, depending on the robot's
                                                     starting position. For RED_F2 the left_window
                                                     encloses the LEFT_SPIKE. -->
                        <left_window>
                            <x>0</x>
                            <y>0</y>
                            <width>360</width>
                            <height>145</height>
                            <prop_location>CENTER_SPIKE</prop_location>
                        </left_window>
                        <right_window>
                            <!-- x starts at left_window.x + left_window.width -->
                            <width>170</width>
                            <!-- y is the same as that of the left_window -->
                            <!-- height is the same as that of the left_window -->
                            <prop_location>RIGHT_SPIKE</prop_location>
                        </right_window>
                        <team_prop_npos>
                            <prop_location>LEFT_SPIKE</prop_location>
                        </team_prop_npos>
                    </team_prop_recognition>
                </FIND_TEAM_PROP>
                 
            <DISABLE_PROCESSOR>
                <internal_webcam_id>front_webcam</internal_webcam_id>
                <processor>webcam_frame</processor>
            </DISABLE_PROCESSOR>

            <STOP_WEBCAM_STREAMING>
                <internal_webcam_id>front_webcam</internal_webcam_id>
            </STOP_WEBCAM_STREAMING>

            <RESUME_WEBCAM_STREAMING>
                <internal_webcam_id>rear_webcam</internal_webcam_id>
            </RESUME_WEBCAM_STREAMING>
           
            <SLEEP>
                <ms>1000</ms>
            </SLEEP>

            <ENABLE_PROCESSOR>
                <internal_webcam_id>rear_webcam</internal_webcam_id>
                <processor>april_tag</processor>
            </ENABLE_PROCESSOR>

            <FIND_APRIL_TAGS>
                <internal_webcam_id>rear_webcam</internal_webcam_id>
            </FIND_APRIL_TAGS>

            <DISABLE_PROCESSOR>
                <internal_webcam_id>rear_webcam</internal_webcam_id>
                <processor>april_tag</processor>
            </DISABLE_PROCESSOR>

            <STOP_WEBCAM_STREAMING>
                <internal_webcam_id>rear_webcam</internal_webcam_id>
            </STOP_WEBCAM_STREAMING>

            <SLEEP>
                <ms>1500</ms>
            </SLEEP>

            <STOP />

        </actions>
    </OpMode>

    <OpMode id="BLUE_A4_CENTER">
        <parameters>
            <log_level>v</log_level>
        </parameters>
        <actions>
            <FORWARD>
                <distance>32.0</distance>
                <velocity>.5</velocity>
                <ramp_down_at_distance_remaining>10</ramp_down_at_distance_remaining>
            </FORWARD>

            <TURN>
                <angle>-90.0</angle>
                <power>.5</power>
                <ramp_down_at_angle_remaining>10.0</ramp_down_at_angle_remaining>
            </TURN>

            <DESKEW />

            <ENABLE_PROCESSOR>
                <internal_webcam_id>rear_webcam</internal_webcam_id>
                <processor>april_tag</processor>
            </ENABLE_PROCESSOR>

            <BACK>
                <distance>12.0</distance>
                <velocity>.5</velocity>
            </BACK>

            <NAVIGATE_TO_APRIL_TAG>
                <internal_webcam_id>rear_webcam</internal_webcam_id>
                <desired_tag_id>3</desired_tag_id>
                <desired_distance_from_tag>12.0</desired_distance_from_tag>
                <direction>back</direction>
            </NAVIGATE_TO_APRIL_TAG>
            
            <SLEEP>
                <ms>1500</ms>
            </SLEEP>

            <STOP />
        </actions>
    </OpMode>

    <OpMode id="RED_F4">
        <parameters>
            <log_level>v</log_level>
        </parameters>
        <actions>
          
            <STOP_WEBCAM_STREAMING>
                <internal_webcam_id>rear_webcam</internal_webcam_id>
            </STOP_WEBCAM_STREAMING>

            <SLEEP>
                <ms>1000</ms>
            </SLEEP>

            <!-- RED_F4 -->
            <FIND_TEAM_PROP>
                <image_parameters>
                    <image_source>front_webcam</image_source>
                    <resolution>
                        <width>640</width>
                        <height>480</height>
                    </resolution>
                    <image_roi>
                        <x>50</x>
                        <y>270</y>
                        <width>530</width>
                        <height>145</height>
                    </image_roi>
                </image_parameters>
                <team_prop_recognition>
                    <recognition_path>color_channel_bright_spot</recognition_path>
                    <!-- These values are relative to the image ROI -->
                    <!-- Note: the left_window may enclose the LEFT_SPIKE
                                                 or the CENTER_SPIKE, depending on the robot's
                                                 starting position. For RED_F2 the left_window
                                                 encloses the LEFT_SPIKE. -->
                    <left_window>
                        <x>0</x>
                        <y>0</y>
                        <width>360</width>
                        <height>145</height>
                        <prop_location>CENTER_SPIKE</prop_location>
                    </left_window>
                    <right_window>
                        <!-- x starts at left_window.x + left_window.width -->
                        <width>170</width>
                        <!-- y is the same as that of the left_window -->
                        <!-- height is the same as that of the left_window -->
                        <prop_location>RIGHT_SPIKE</prop_location>
                    </right_window>
                    <team_prop_npos>
                        <prop_location>LEFT_SPIKE</prop_location>
                    </team_prop_npos>
                </team_prop_recognition>
            </FIND_TEAM_PROP>

            <DISABLE_PROCESSOR>
                <internal_webcam_id>front_webcam</internal_webcam_id>
                <processor>webcam_frame</processor>
            </DISABLE_PROCESSOR>

            <STOP_WEBCAM_STREAMING>
                <internal_webcam_id>front_webcam</internal_webcam_id>
            </STOP_WEBCAM_STREAMING>

            <TEAM_PROP_LOCATION_CHOICE>
                <LEFT_SPIKE>
                    <FORWARD>
                        <distance>29.0</distance>
                        <velocity>.5</velocity>
                        <ramp_down_at_distance_remaining>10</ramp_down_at_distance_remaining>
                    </FORWARD>

                    <TURN>
                        <angle>90.0</angle>
                        <power>.5</power>
                        <ramp_down_at_angle_remaining>10.0</ramp_down_at_angle_remaining>
                    </TURN>

                    <DESKEW />

                    <FORWARD>
                        <distance>7.0</distance>
                        <velocity>.5</velocity>
                    </FORWARD>

                    <BACK>
                        <distance>12.0</distance>
                        <velocity>.5</velocity>
                    </BACK>
                  
            <RESUME_WEBCAM_STREAMING>
                <internal_webcam_id>rear_webcam</internal_webcam_id>
            </RESUME_WEBCAM_STREAMING>
           
            <SLEEP>
                <ms>1000</ms>
            </SLEEP>

                    <ENABLE_PROCESSOR>
                        <internal_webcam_id>rear_webcam</internal_webcam_id>
                        <processor>april_tag</processor>
                    </ENABLE_PROCESSOR>

                    <NAVIGATE_TO_APRIL_TAG>
                        <internal_webcam_id>rear_webcam</internal_webcam_id>
                        <desired_tag_id>4</desired_tag_id>
                        <desired_distance_from_tag>12.0</desired_distance_from_tag>
                        <direction>back</direction>
                    </NAVIGATE_TO_APRIL_TAG>
                </LEFT_SPIKE>

                <CENTER_SPIKE>

                    <FORWARD>
                        <distance>32.0</distance>
                        <velocity>.5</velocity>
                        <ramp_down_at_distance_remaining>10</ramp_down_at_distance_remaining>
                    </FORWARD>

                    <TURN>
                        <angle>90.0</angle>
                        <power>.5</power>
                        <ramp_down_at_angle_remaining>10.0</ramp_down_at_angle_remaining>
                    </TURN>

                    <DESKEW />
                 
                    <RESUME_WEBCAM_STREAMING>
                        <internal_webcam_id>rear_webcam</internal_webcam_id>
                    </RESUME_WEBCAM_STREAMING>

                    <ENABLE_PROCESSOR>
                        <internal_webcam_id>rear_webcam</internal_webcam_id>
                        <processor>april_tag</processor>
                    </ENABLE_PROCESSOR>
                   
                    <SLEEP>
                        <ms>1000</ms>
                    </SLEEP>
                    
                    <NAVIGATE_TO_APRIL_TAG>
                        <internal_webcam_id>rear_webcam</internal_webcam_id>
                        <desired_tag_id>5</desired_tag_id>
                        <desired_distance_from_tag>12.0</desired_distance_from_tag>
                        <direction>back</direction>
                    </NAVIGATE_TO_APRIL_TAG>
                </CENTER_SPIKE>

                <RIGHT_SPIKE>
                    <STRAIGHT_BY>
                        <distance>30.0</distance>
                        <velocity>0.5</velocity>
                        <angle>-30.0</angle>
                        <ramp_down_at_distance_remaining>10</ramp_down_at_distance_remaining>
                    </STRAIGHT_BY>

                    <TURN>
                        <angle>90.0</angle>
                        <power>.5</power>
                        <ramp_down_at_angle_remaining>10.0</ramp_down_at_angle_remaining>
                    </TURN>
                 
            <RESUME_WEBCAM_STREAMING>
                <internal_webcam_id>rear_webcam</internal_webcam_id>
            </RESUME_WEBCAM_STREAMING>
           
            <SLEEP>
                <ms>1000</ms>
            </SLEEP>

                    <ENABLE_PROCESSOR>
                        <internal_webcam_id>rear_webcam</internal_webcam_id>
                        <processor>april_tag</processor>
                    </ENABLE_PROCESSOR>

                    <NAVIGATE_TO_APRIL_TAG>
                        <internal_webcam_id>rear_webcam</internal_webcam_id>
                        <desired_tag_id>6</desired_tag_id>
                        <desired_distance_from_tag>12.0</desired_distance_from_tag>
                        <direction>back</direction>
                    </NAVIGATE_TO_APRIL_TAG>
                </RIGHT_SPIKE>
            </TEAM_PROP_LOCATION_CHOICE>


            <SLEEP>
                <ms>1500</ms>
            </SLEEP>

            <STOP />

        </actions>
    </OpMode>

    <!-- Pseudo-OpModes that can be used to run FTCAuto functions from within TeleOp -->
    <OpMode id="TELEOP_TAKE_PICTURE_WEBCAM">
        <parameters>
            <log_level>d</log_level>
        </parameters>

        <actions>

            <TAKE_PICTURE_WEBCAM />

            <SLEEP>
                <ms>1500</ms>
            </SLEEP>

        </actions>

    </OpMode>

</RobotAction>