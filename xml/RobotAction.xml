<RobotAction>

    <!-- For testing with a drive train. -->
    <!-- On the Driver Station select the autonomous OpMode
         Test, TestRED (to run the TEST OpMode under the red alliance),
         or TestBLUE (to run the TEST OpMode under the blue alliance -->
    <OpMode id="TEST">
        <parameters>
            <log_level>v</log_level>
        </parameters>
        <actions>

            <!-- Test exposure -->

            <!-- TAKE_PICTURE_WEBCAM>
                <internal_webcam_id>front_webcam</internal_webcam_id>
            </TAKE_PICTURE_WEBCAM -->

            <STOP_WEBCAM>
                <internal_webcam_id>front_webcam</internal_webcam_id>
            </STOP_WEBCAM>

            <SLEEP>
                <ms>1000</ms>
            </SLEEP>

            <!-- TEST_MULTIPORTAL_SAMPLE / -->

            <START_WEBCAM>
                <internal_webcam_id>rear_webcam</internal_webcam_id>
                <processor>april_tag</processor>
            </START_WEBCAM>

            <WAIT_FOR_WEBCAM_START>
                <internal_webcam_id>rear_webcam</internal_webcam_id>
                <timeout_ms>2000</timeout_ms>
            </WAIT_FOR_WEBCAM_START>

            <TURN>
                <angle>90.0</angle>
                <power>.5</power>
                <ramp_down_at_angle_remaining>10.0</ramp_down_at_angle_remaining>
            </TURN>

            <DESKEW />

            <FIND_ALL_APRIL_TAGS>
                <internal_webcam_id>rear_webcam</internal_webcam_id>
            </FIND_ALL_APRIL_TAGS>

            <!-- DRIVE_TO_APRIL_TAG>
                <internal_webcam_id>rear_webcam</internal_webcam_id>
                <tag_id>5</tag_id>
                <timeout_ms>1000</timeout_ms>
                <desired_distance_from_tag>10.0</desired_distance_from_tag>
                <direction>back</direction>
            </DRIVE_TO_APRIL_TAG -->

            <!-- FIND_APRIL_TAG>
                <internal_webcam_id>rear_webcam</internal_webcam_id>
                <tag_id>5</tag_id>
                <timeout_ms>1000</timeout_ms>
            </FIND_APRIL_TAG -->

            <!-- NAVIGATE_TO_APRIL_TAG>
                <internal_webcam_id>rear_webcam</internal_webcam_id>
                <tag_id>6</tag_id>
                <desired_distance_from_tag>12.0</desired_distance_from_tag>
                <direction>back</direction>
            </NAVIGATE_TO_APRIL_TAG -->

        </actions>
    </OpMode>

    <OpMode id="BLUE_A4_CENTER">
        <parameters>
            <log_level>v</log_level>
        </parameters>
        <actions>
            <FORWARD>
                <distance>32.0</distance>
                <velocity>.5</velocity>
                <ramp_down_at_distance_remaining>10</ramp_down_at_distance_remaining>
            </FORWARD>

            <TURN>
                <angle>-90.0</angle>
                <power>.5</power>
                <ramp_down_at_angle_remaining>10.0</ramp_down_at_angle_remaining>
            </TURN>

            <DESKEW />

            <ENABLE_PROCESSOR>
                <internal_webcam_id>rear_webcam</internal_webcam_id>
                <processor>april_tag</processor>
            </ENABLE_PROCESSOR>

            <BACK>
                <distance>12.0</distance>
                <velocity>.5</velocity>
            </BACK>

            <NAVIGATE_TO_APRIL_TAG>
                <internal_webcam_id>rear_webcam</internal_webcam_id>
                <tag_id>3</tag_id>
                <desired_distance_from_tag>12.0</desired_distance_from_tag>
                <direction>back</direction>
            </NAVIGATE_TO_APRIL_TAG>

            <SLEEP>
                <ms>1500</ms>
            </SLEEP>

            <STOP />
        </actions>
    </OpMode>

    <OpMode id="RED_F4">
        <parameters>
            <log_level>v</log_level>
        </parameters>
        <actions>

            <!-- RED_F4 -->
            <FIND_TEAM_PROP>
                <image_parameters>
                    <image_source>front_webcam</image_source>
                    <resolution>
                        <width>640</width>
                        <height>480</height>
                    </resolution>
                    <image_roi>
                        <x>50</x>
                        <y>270</y>
                        <width>530</width>
                        <height>145</height>
                    </image_roi>
                </image_parameters>
                <team_prop_recognition>
                    <recognition_path>color_channel_bright_spot</recognition_path>
                    <!-- These values are relative to the image ROI -->
                    <!-- Note: the left_window may enclose the LEFT_SPIKE
                                                 or the CENTER_SPIKE, depending on the robot's
                                                 starting position. For RED_F2 the left_window
                                                 encloses the LEFT_SPIKE. -->
                    <left_window>
                        <x>0</x>
                        <y>0</y>
                        <width>360</width>
                        <height>145</height>
                        <prop_location>CENTER_SPIKE</prop_location>
                    </left_window>
                    <right_window>
                        <!-- x starts at left_window.x + left_window.width -->
                        <width>170</width>
                        <!-- y is the same as that of the left_window -->
                        <!-- height is the same as that of the left_window -->
                        <prop_location>RIGHT_SPIKE</prop_location>
                    </right_window>
                    <team_prop_npos>
                        <prop_location>LEFT_SPIKE</prop_location>
                    </team_prop_npos>
                </team_prop_recognition>
            </FIND_TEAM_PROP>

            <STOP_WEBCAM>
                <internal_webcam_id>front_webcam</internal_webcam_id>
            </STOP_WEBCAM>

            <START_WEBCAM>
                <internal_webcam_id>rear_webcam</internal_webcam_id>
                <processor>april_tag</processor>
            </START_WEBCAM>

            <TEAM_PROP_LOCATION_CHOICE>
                <LEFT_SPIKE>
                    <FORWARD>
                        <distance>29.0</distance>
                        <velocity>.5</velocity>
                        <ramp_down_at_distance_remaining>10</ramp_down_at_distance_remaining>
                    </FORWARD>

                    <TURN>
                        <angle>90.0</angle>
                        <power>.5</power>
                        <ramp_down_at_angle_remaining>10.0</ramp_down_at_angle_remaining>
                    </TURN>

                    <DESKEW />

                    <FORWARD>
                        <distance>7.0</distance>
                        <velocity>.5</velocity>
                    </FORWARD>

                    <BACK>
                        <distance>32.0</distance>
                        <velocity>.5</velocity>
                    </BACK>

                    <DESKEW />

                    <SLEEP>
                        <ms>1000</ms>
                    </SLEEP>

                    <WAIT_FOR_WEBCAM_START>
                        <internal_webcam_id>rear_webcam</internal_webcam_id>
                        <timeout_ms>2000</timeout_ms>
                    </WAIT_FOR_WEBCAM_START>

                    <STRAFE_RIGHT>
                        <distance>10.0</distance>
                        <velocity>0.5</velocity>
                    </STRAFE_RIGHT>

                    <DESKEW />

                    <DRIVE_TO_APRIL_TAG>
                        <internal_webcam_id>rear_webcam</internal_webcam_id>
                        <tag_id>4</tag_id>
                        <timeout_ms>1000</timeout_ms>
                        <desired_distance_from_tag>10.0</desired_distance_from_tag>
                        <direction>back</direction>
                    </DRIVE_TO_APRIL_TAG>

                </LEFT_SPIKE>

                <CENTER_SPIKE>
                    <FORWARD>
                        <distance>32.0</distance>
                        <velocity>.5</velocity>
                        <ramp_down_at_distance_remaining>10</ramp_down_at_distance_remaining>
                    </FORWARD>

                    <TURN>
                        <angle>90.0</angle>
                        <power>.5</power>
                        <ramp_down_at_angle_remaining>10.0</ramp_down_at_angle_remaining>
                    </TURN>

                    <DESKEW />

                    <BACK>
                        <distance>27.0</distance>
                        <velocity>.5</velocity>
                    </BACK>

                    <DESKEW />

                    <SLEEP>
                        <ms>1000</ms>
                    </SLEEP>

                    <WAIT_FOR_WEBCAM_START>
                        <internal_webcam_id>rear_webcam</internal_webcam_id>
                        <timeout_ms>2000</timeout_ms>
                    </WAIT_FOR_WEBCAM_START>

                    <!-- //**TODO experiment 10/24/23 -->
                    <!-- NAVIGATE_TO_APRIL_TAG>
                        <internal_webcam_id>rear_webcam</internal_webcam_id>
                        <tag_id>5</tag_id>
                        <desired_distance_from_tag>12.0</desired_distance_from_tag>
                        <direction>back</direction>
                    </NAVIGATE_TO_APRIL_TAG -->

                    <DRIVE_TO_APRIL_TAG>
                        <internal_webcam_id>rear_webcam</internal_webcam_id>
                        <tag_id>5</tag_id>
                        <timeout_ms>1000</timeout_ms>
                        <desired_distance_from_tag>10.0</desired_distance_from_tag>
                        <direction>back</direction>
                    </DRIVE_TO_APRIL_TAG>

                </CENTER_SPIKE>

                <RIGHT_SPIKE>
                    <STRAIGHT_BY>
                        <distance>35.0</distance>
                        <velocity>0.75</velocity>
                        <angle>-30.0</angle>
                        <ramp_down_at_distance_remaining>10</ramp_down_at_distance_remaining>
                    </STRAIGHT_BY>

                    <TURN>
                        <angle>90.0</angle>
                        <power>.5</power>
                        <ramp_down_at_angle_remaining>10.0</ramp_down_at_angle_remaining>
                    </TURN>

                    <DESKEW />

                    <SLEEP>
                        <ms>1000</ms>
                    </SLEEP>

                    <WAIT_FOR_WEBCAM_START>
                        <internal_webcam_id>rear_webcam</internal_webcam_id>
                        <timeout_ms>2000</timeout_ms>
                    </WAIT_FOR_WEBCAM_START>

                    <DRIVE_TO_APRIL_TAG>
                        <internal_webcam_id>rear_webcam</internal_webcam_id>
                        <tag_id>6</tag_id>
                        <timeout_ms>1000</timeout_ms>
                        <desired_distance_from_tag>10.0</desired_distance_from_tag>
                        <direction>back</direction>
                    </DRIVE_TO_APRIL_TAG>

                </RIGHT_SPIKE>
            </TEAM_PROP_LOCATION_CHOICE>

            <SLEEP>
                <ms>1500</ms>
            </SLEEP>

            <STOP />

        </actions>
    </OpMode>

    <!-- Pseudo-OpModes that can be used to run FTCAuto functions from within TeleOp -->
    <OpMode id="TELEOP_TAKE_PICTURE_WEBCAM">
        <parameters>
            <log_level>d</log_level>
        </parameters>

        <actions>

            <TAKE_PICTURE_WEBCAM />

            <SLEEP>
                <ms>1500</ms>
            </SLEEP>

        </actions>

    </OpMode>

</RobotAction>